{
    "name": "flowframe/php-previewify",
    "description": "The official PHP Previewify client",
    "keywords": [
        "Flowframe",
        "php-previewify"
    ],
    "homepage": "https://github.com/flowframe/php-previewify",
    "license": "MIT",
    "authors": [
        {
            "name": "Lars Klopstra",
            "email": "lars@flowframe.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-curl": "*",
        "ext-json": "*",
        "php": "^7.2|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Flowframe\\Previewify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flowframe\\Previewify\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
